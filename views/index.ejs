<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Form</title>
    <style>
      * {
        box-sizing: border-box;
      }
      body {
        background-color: dodgerblue;
        font-family: Arial, Helvetica, sans-serif;
      }
      *input:focus,
      input::selection {
        border: none;
        outline: none;
      }
      form {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 300px;
        border: 1px solid green;
        background-color: #fff;
        padding: 5px;
      }

      input[type="email"],
      input[type="text"] {
        width: 100%;
        height: 40px;
        border: 1px solid rgb(206, 206, 206);
        padding: 8px 9px;
        margin: 10px 0;
        border-radius: 5px;
        color: rgb(22, 42, 56);
      }
      button {
        border: none;
        background-color: dodgerblue;
        color: #fff;
        border-radius: 5px;
        width: 100%;
        height: 40px;
        margin: 10px 0 50px 0;
      }
      textarea {
        width: 100%;
        border-radius: 5px;
        resize: none;
        border: 1px solid rgb(206, 206, 206);
        font-family: Arial, Helvetica, sans-serif;
        font-size: 1rem;
        padding: 5px;
      }

      .column {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
      }
      label {
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <form
      action="http://localhost:2000/mail"
      method="POST"
      onsubmit="handleSubmit"
    >
      <form-group>
        <label for="email">From</label>
        <input type="email" name="email" id="" placeholder="your email" />
      </form-group>
      <div class="form-group">
        <label for="text">Subject</label>
        <input type="text" name="subject" id="" placeholder="subject" />
      </div>
      <div class="form-group" class="column">
        <label for="Content">From</label>
        <textarea
          type="text"
          name="content"
          id=""
          placeholder="your text"
        ></textarea>
      </div>
      <button>Submit</button>
    </form>

    <script>
      const handleSubmit = (e) => {
        e.preventDefault();
      };
    </script>
  </body>
</html>
